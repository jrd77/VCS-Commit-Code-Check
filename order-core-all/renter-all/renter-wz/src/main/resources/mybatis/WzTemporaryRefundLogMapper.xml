<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atzuche.order.renterwz.mapper.WzTemporaryRefundLogMapper">
	<sql id="select_column">
		id,order_no,amount,reason,create_time,operator
	</sql>

	<resultMap id = "selectColumnMap" type="com.atzuche.order.renterwz.entity.WzTemporaryRefundLogEntity">
		<result property="id" column="id"/>
		<result property="orderNo" column="order_no"/>
		<result property="amount" column="amount"/>
		<result property="reason" column="reason"/>
		<result property="createTime" column="create_time"/>
		<result property="operator" column="operator"/>
	</resultMap>

	<insert id="saveWzTemporaryRefundLog" parameterType="com.atzuche.order.renterwz.entity.WzTemporaryRefundLogEntity" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into wz_temporary_refund_log(
			order_no,
			amount,
			<if test="reason != null">
				reason,
			</if>
			status,
			operator,
			create_time
		) values (
			#{orderNo},
			#{amount},
			<if test="reason != null">
				#{reason},
			</if>
			#{status},
			#{operator},
			#{createTime})
	</insert>

	<select id="queryWzTemporaryRefundLogById" resultType="com.atzuche.order.renterwz.entity.WzTemporaryRefundLogEntity">
		select <include refid="select_column" />
		from wz_temporary_refund_log
		where id = #{id} and status = 1
	</select>

	<select id="queryTemporaryRefundLogsByOrderNo" resultMap="selectColumnMap">
		select <include refid="select_column" />
		from wz_temporary_refund_log
		where order_no = #{orderNo} and status = 1 order by id desc
	</select>

	 <update id="updateStatusById">
		update wz_temporary_refund_log set
			 status = #{status}
		where id = #{id}
	</update>


</mapper>
