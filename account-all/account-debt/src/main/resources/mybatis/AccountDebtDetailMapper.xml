<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atzuche.order.settle.mapper.AccountDebtDetailMapper">

    <resultMap type="com.atzuche.order.settle.entity.AccountDebtDetailEntity" id="BaseResultMap">
                    <result property="id" column="id"/>
                    <result property="memNo" column="mem_no"/>
                    <result property="orderNo" column="order_no"/>
                    <result property="renterOrderNo" column="renter_order_no"/>
                    <result property="ownerOrderNo" column="owner_order_no"/>
                    <result property="type" column="type"/>
                    <result property="currentDebtAmt" column="current_debt_amt"/>
                    <result property="orderDebtAmt" column="order_debt_amt"/>
                    <result property="repaidDebtAmt" column="repaid_debt_amt"/>
                    <result property="sourceCode" column="source_code"/>
                    <result property="sourceDetail" column="source_detail"/>
                    <result property="version" column="version"/>
                    <result property="deptName" column="dept_name"/>
                    <result property="createTime" column="create_time"/>
                    <result property="createOp" column="create_op"/>
                    <result property="updateTime" column="update_time"/>
                    <result property="updateOp" column="update_op"/>
                    <result property="isDelete" column="is_delete"/>
            </resultMap>


    <sql id="Base_Column_List">
	`id`, 
    	`mem_no`, 
    	`order_no`, 
    	`renter_order_no`, 
    	`owner_order_no`, 
    	`type`, 
    	`current_debt_amt`, 
    	`order_debt_amt`, 
    	`repaid_debt_amt`, 
    	`source_code`, 
    	`source_detail`, 
    	`version`, 
    	`dept_name`, 
    	`create_time`, 
    	`create_op`, 
    	`update_time`, 
    	`update_op`, 
    	`is_delete`
    
	</sql>


    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from account_debt_detail where id = #{value}
    </select>

    <insert id="insert" parameterType="com.atzuche.order.settle.entity.AccountDebtDetailEntity" useGeneratedKeys="true" keyProperty="id">
        insert into account_debt_detail
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="memNo != null">`mem_no`, </if>
            <if test="orderNo != null">`order_no`, </if>
            <if test="renterOrderNo != null">`renter_order_no`, </if>
            <if test="ownerOrderNo != null">`owner_order_no`, </if>
            <if test="type != null">`type`, </if>
            <if test="currentDebtAmt != null">`current_debt_amt`, </if>
            <if test="orderDebtAmt != null">`order_debt_amt`, </if>
            <if test="repaidDebtAmt != null">`repaid_debt_amt`, </if>
            <if test="sourceCode != null">`source_code`, </if>
            <if test="sourceDetail != null">`source_detail`, </if>
            <if test="version != null">`version`, </if>
            <if test="deptName != null">`dept_name`, </if>
            <if test="createTime != null">`create_time`, </if>
            <if test="createOp != null">`create_op`, </if>
            <if test="updateTime != null">`update_time`, </if>
            <if test="updateOp != null">`update_op`, </if>
            <if test="isDelete != null">`is_delete` </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="memNo != null">#{memNo},  </if>
            <if test="orderNo != null">#{orderNo},  </if>
            <if test="renterOrderNo != null">#{renterOrderNo},  </if>
            <if test="ownerOrderNo != null">#{ownerOrderNo},  </if>
            <if test="type != null">#{type},  </if>
            <if test="currentDebtAmt != null">#{currentDebtAmt},  </if>
            <if test="orderDebtAmt != null">#{orderDebtAmt},  </if>
            <if test="repaidDebtAmt != null">#{repaidDebtAmt},  </if>
            <if test="sourceCode != null">#{sourceCode},  </if>
            <if test="sourceDetail != null">#{sourceDetail},  </if>
            <if test="version != null">#{version},  </if>
            <if test="deptName != null">#{deptName},  </if>
            <if test="createTime != null">#{createTime},  </if>
            <if test="createOp != null">#{createOp},  </if>
            <if test="updateTime != null">#{updateTime},  </if>
            <if test="updateOp != null">#{updateOp},  </if>
            <if test="isDelete != null">#{isDelete} </if>
        </trim>
	</insert>




    <update id="updateByPrimaryKeySelective" parameterType="com.atzuche.order.settle.entity.AccountDebtDetailEntity">
        update account_debt_detail
        <set>
                     <if test="memNo != null">`mem_no` = #{memNo}, </if>
                                                                <if test="orderNo != null">`order_no` = #{orderNo}, </if>
                                                                <if test="renterOrderNo != null">`renter_order_no` = #{renterOrderNo}, </if>
                                                                <if test="ownerOrderNo != null">`owner_order_no` = #{ownerOrderNo}, </if>
                                                                <if test="type != null">`type` = #{type}, </if>
                                                                <if test="currentDebtAmt != null">`current_debt_amt` = #{currentDebtAmt}, </if>
                                                                <if test="orderDebtAmt != null">`order_debt_amt` = #{orderDebtAmt}, </if>
                                                                <if test="repaidDebtAmt != null">`repaid_debt_amt` = #{repaidDebtAmt}, </if>
                                                                <if test="sourceCode != null">`source_code` = #{sourceCode}, </if>
                                                                <if test="sourceDetail != null">`source_detail` = #{sourceDetail}, </if>
                       version = #{version},
                                                                <if test="deptName != null">`dept_name` = #{deptName}, </if>
                                                                <if test="createTime != null">`create_time` = #{createTime}, </if>
                                                                <if test="createOp != null">`create_op` = #{createOp}, </if>
                                                                <if test="updateTime != null">`update_time` = #{updateTime}, </if>
                                                                <if test="updateOp != null">`update_op` = #{updateOp}, </if>
                                                                <if test="isDelete != null">`is_delete` = #{isDelete}</if>
                                    </set>
        where id = #{id}
    </update>

    <select id="getDebtListByMemNo" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from account_debt_detail where mem_no = #{memNo}
        and <![CDATA[ order_debt_amt + repaid_debt_amt <>0 ]]>
    </select>
    
    <select id="getDebtListByMemNoAndOrderNos" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from account_debt_detail where mem_no = #{memNo}
        and <![CDATA[ order_debt_amt + repaid_debt_amt <>0 ]]>
        and order_no IN
		<foreach collection="orderNoList" item="orderNo" open="(" separator="," close=")">
			#{orderNo}
		</foreach>
    </select>
	
	<select id="listAccountDebtDetailEntity" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" /> from account_debt_detail where mem_no = #{memNo} and order_no = #{orderNo} and is_delete = 0  
	</select>
	
	<!-- 根据订单号查询 -->
	<select id="getDebtListByOrderNo" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from account_debt_detail where mem_no = #{memNo} and order_no = #{orderNo} 
        and <![CDATA[ order_debt_amt + repaid_debt_amt <>0 ]]>
    </select>
    <select id="selectMemberOrderDebtList" resultType="com.atzuche.order.commons.entity.dto.MemberOrderDebtDTO">
        SELECT
        `order`.`exp_rent_time` AS orderStartTime,
        `order`.`exp_revert_time` AS orderEndTime,
        `order`.`create_time` AS createOrderTime,
        `order`.`order_no` AS orderNo,
        abs( ad.current_debt_amt ) AS debtAmt
        FROM
        `order_center`.`account_debt_detail` AS ad
        LEFT JOIN `order_center`.`order` ON ad.order_no = `order`.order_no
        WHERE
        <![CDATA[ order_debt_amt + repaid_debt_amt <>0 ]]>
        and ad.is_delete=0
    </select>


</mapper>