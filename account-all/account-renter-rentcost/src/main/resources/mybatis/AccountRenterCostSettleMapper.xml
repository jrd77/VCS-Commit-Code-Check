	<sql id="Base_Column_List">
	`id`, 	
	`order_no`, 	
	`mem_no`, 	
	`rent_amt`, 	
	`yongjin_amt`, 	
	`basic_ensure_amount`, 	
	`comprehensive_ensure_amount`, 	
	`additional_driving_ensure_amount`, 	
	`other_amt`, 	
	`platform_subsidy_amount`, 	
	`car_owner_subsidy_amount`, 	
	`shifu_amt`, 	
	`version`, 	
	`create_time`, 	
	`create_op`, 	
	`update_time`, 	
	`update_op`, 	
	`is_delete`	

	</sql>


	<select id="selectByPrimaryKey" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" /> from account_renter_cost_settle where id = #{value}
	</select>


	 
	<insert id="insert" parameterType="com.atzuche.order.accountrenterrentcost.entity.AccountRenterCostSettleEntity">
		insert into account_renter_cost_settle
		(
			`id`,		
				`order_no`,		
				`mem_no`,		
				`rent_amt`,		
				`yongjin_amt`,		
				`basic_ensure_amount`,		
				`comprehensive_ensure_amount`,		
				`additional_driving_ensure_amount`,		
				`other_amt`,		
				`platform_subsidy_amount`,		
				`car_owner_subsidy_amount`,		
				`shifu_amt`,		
				`version`,		
				`create_time`,		
				`create_op`,		
				`update_time`,		
				`update_op`,		
				`is_delete`		
			)
		values
		(
			#{id}, 		
				#{orderNo}, 		
				#{memNo}, 		
				#{rentAmt}, 		
				#{yongjinAmt}, 		
				#{basicEnsureAmount}, 		
				#{comprehensiveEnsureAmount}, 		
				#{additionalDrivingEnsureAmount}, 		
				#{otherAmt}, 		
				#{platformSubsidyAmount}, 		
				#{carOwnerSubsidyAmount}, 		
				#{shifuAmt}, 		
				#{version}, 		
				#{createTime}, 		
				#{createOp}, 		
				#{updateTime}, 		
				#{updateOp}, 		
				#{isDelete}		
			)
	</insert>
	

	<update id="updateByPrimaryKeySelective" parameterType="com.atzuche.order.accountrenterrentcost.entity.AccountRenterCostSettleEntity">
		update account_renter_cost_settle 
		<set>
				<if test="orderNo != null">`order_no` = #{orderNo}, </if>
				<if test="memNo != null">`mem_no` = #{memNo}, </if>
				<if test="rentAmt != null">`rent_amt` = #{rentAmt}, </if>
				<if test="yongjinAmt != null">`yongjin_amt` = #{yongjinAmt}, </if>
				<if test="basicEnsureAmount != null">`basic_ensure_amount` = #{basicEnsureAmount}, </if>
				<if test="comprehensiveEnsureAmount != null">`comprehensive_ensure_amount` = #{comprehensiveEnsureAmount}, </if>
				<if test="additionalDrivingEnsureAmount != null">`additional_driving_ensure_amount` = #{additionalDrivingEnsureAmount}, </if>
				<if test="otherAmt != null">`other_amt` = #{otherAmt}, </if>
				<if test="platformSubsidyAmount != null">`platform_subsidy_amount` = #{platformSubsidyAmount}, </if>
				<if test="carOwnerSubsidyAmount != null">`car_owner_subsidy_amount` = #{carOwnerSubsidyAmount}, </if>
				<if test="shifuAmt != null">`shifu_amt` = #{shifuAmt}, </if>
                 version = version + 1,
				<if test="createTime != null">`create_time` = #{createTime}, </if>
				<if test="createOp != null">`create_op` = #{createOp}, </if>
				<if test="updateTime != null">`update_time` = #{updateTime}, </if>
				<if test="updateOp != null">`update_op` = #{updateOp}, </if>
				<if test="isDelete != null">`is_delete` = #{isDelete}</if>
			</set>
		where id = #{id} and version = #{version}
	</update>

    <!-- 根据订单号 会员号查询用户支付记录 -->
    <select id="selectByOrderNo" resultMap="BaseResultMap">
        select  <include refid="Base_Column_List" /> from account_renter_cost_settle where order_no  = #{orderNo} and mem_no = #{memNo} order by id desc
    </select>

</mapper>