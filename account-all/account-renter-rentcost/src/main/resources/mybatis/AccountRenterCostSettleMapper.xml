<mapper namespace="com.atzuche.order.accountrenterrentcost.mapper.AccountRenterCostSettleMapper">

    <resultMap type="com.atzuche.order.accountrenterrentcost.entity.AccountRenterCostSettleEntity" id="BaseResultMap">
        <result property="id" column="id"/>
        <result property="orderNo" column="order_no"/>
        <result property="memNo" column="mem_no"/>
        <result property="rentAmt" column="rent_amt"/>
        <result property="yongjinAmt" column="yongjin_amt"/>
        <result property="basicEnsureAmount" column="basic_ensure_amount"/>
        <result property="comprehensiveEnsureAmount" column="comprehensive_ensure_amount"/>
        <result property="additionalDrivingEnsureAmount" column="additional_driving_ensure_amount"/>
        <result property="otherAmt" column="other_amt"/>
        <result property="platformSubsidyAmount" column="platform_subsidy_amount"/>
        <result property="carOwnerSubsidyAmount" column="car_owner_subsidy_amount"/>
        <result property="shifuAmt" column="shifu_amt"/>
        <result property="version" column="version"/>
        <result property="createTime" column="create_time"/>
        <result property="createOp" column="create_op"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateOp" column="update_op"/>
        <result property="isDelete" column="is_delete"/>
